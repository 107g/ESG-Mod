		<Modifier TargetProperty="GroundBattleBombardmentImprovementDestructionProbability" Operation="Subtraction" Value="0.75" />
		<Modifier TargetProperty="GroundBattleBombardmentPopulationDestructionProbability"  Operation="Subtraction" Value="0.75" />
    <Modifier TargetProperty="GroundBattleBombardmentAttackerDamageReduction" Operation="Subtraction" Value="0.5" />
	</SimulationDescriptor>

  <!-- Hissho Protect System (Sacred Ground) -->
  <!-- Direct -->
  <SimulationDescriptor Name="GroundBattleDefenderStrategyHisshosHonor" Type="GroundBattleDefenderStrategy">
    <Modifier TargetProperty="GroundBattleDefenderTroopsMaxHealthMultiplier" Operation="Addition" Value="0.5"/>
    <Modifier TargetProperty="GroundBattleBombardmentImprovementDestructionProbability" Operation="Subtraction" Value="1" />
    <Modifier TargetProperty="GroundBattleBombardmentPopulationDestructionProbability"  Operation="Subtraction" Value="1" />
    <Modifier TargetProperty="GroundBattleBombardmentAttackerDamagesMin" Operation="Addition" Value="1000" />
    <Modifier TargetProperty="GroundBattleBombardmentAttackerDamagesMax" Operation="Addition" Value="1500" />
    <Modifier TargetProperty="GroundBattleBombardmentAttackerDamageReduction" Operation="Subtraction" Value="0.5" />
