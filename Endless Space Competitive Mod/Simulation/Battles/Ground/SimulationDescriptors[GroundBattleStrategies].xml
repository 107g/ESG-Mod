  </SimulationDescriptor>

  <!-- Protect System -->
  <SimulationDescriptor Name="GroundBattleDefenderStrategy2" Type="GroundBattleDefenderStrategy">
    <Modifier TargetProperty="GroundBattleDefenderTroopsMaxHealthMultiplier" Operation="Addition" Value="0.3"/>
    <Modifier TargetProperty="GroundBattleBombardmentImprovementDestructionProbability" Operation="Subtraction" Value="0.5" />
    <Modifier TargetProperty="GroundBattleBombardmentPopulationDestructionProbability"  Operation="Subtraction" Value="0.5" />
    <Modifier TargetProperty="GroundBattleBombardmentAttackerDamageReduction" Operation="Subtraction" Value="0.5" />
  </SimulationDescriptor>

