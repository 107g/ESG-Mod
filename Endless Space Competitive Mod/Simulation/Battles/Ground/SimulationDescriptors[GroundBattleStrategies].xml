    <Modifier TargetProperty="GroundBattleBombardmentAttackerDamagesMin" Operation="Addition" Value="1500" TooltipOverride="%GroundBattleDefenderStrategy4EffectOverride"/>
    <Modifier TargetProperty="GroundBattleBombardmentAttackerDamagesMax" Operation="Addition" Value="2000" TooltipHidden="true"/>
  </SimulationDescriptor>
</Datatable>