<?xml version="1.0" encoding="utf-8" ?>
<Datatable xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xsi:noNamespaceSchemaLocation="../../Schemas/Amplitude.Unity.Simulation.SimulationDescriptor.xsd">
  <SimulationDescriptor Name="ShipRoleRootCreator"      Type="ShipRole">
    <Modifier TargetProperty="ScrapPriority"            Operation="Subtraction" Value="7"  Path="ClassShip"/>
    <Modifier TargetProperty="MaximumMovement"          Operation="Addition"    Value="1"     Path="ClassShip"/>
  </SimulationDescriptor>

  <SimulationDescriptor Name="ShipRoleBattleship"         Type="ShipRole">
    <Property Name="TurnsBeforeIonWaveIsAvailable" IsSealed="true"/>
    <Property Name="NetTurnsBeforeIonWaveIsAvailable" BaseValue="-1" MinValue="Negative"/>
    <Property Name="JuggernautShotCost"               BaseValue="25"/>
    <Modifier TargetProperty="BattleshipCount" Operation="Addition" Value="1" Path="../ClassEmpire" TooltipHidden="true"/>
    <Modifier TargetProperty="AntiVisionStrengthForModule" Operation="Force"     Value="0" Path="../ClassGarrisonFleet"  TooltipHidden="true" Priority="0"/>
  </SimulationDescriptor>

  <SimulationDescriptor Name="LargeWeapon"    Type="LargeWeapon">
    <Modifier TargetProperty="MaximumHealth"            Operation="Percent"         Value="3"   Path="ClassModule" />
    <Modifier TargetProperty="OffensiveMilitaryPower"   Operation="Percent"         Value="1"   Path="ClassModule" />
    <Modifier TargetProperty="Cooldown"                 Operation="Percent"         Value="1"   Path="ClassModuleWeapon,!ClassModuleWeaponAOE" />
    <Modifier TargetProperty="CooldownVariation"        Operation="Percent"         Value="1"   Path="ClassModuleWeapon,ClassModuleWeaponMissileSwarm" />
    <Modifier TargetProperty="Damage"                   Operation="Percent"         Value="3"   Path="ClassModuleWeapon,!ClassModuleWeaponAOE" />
    <Modifier TargetProperty="Damage"                   Operation="Multiplication"  Value="2"   Path="ClassModuleWeapon,ClassModuleWeaponAOE"/>
    <!-- Cooldown /2 & Damage x4 => DPS x2-->
  </SimulationDescriptor>

  <SimulationDescriptor Name="ShipLevel01" Type="ShipLevel" IsSerializable="false">
  </SimulationDescriptor>

  <SimulationDescriptor Name="ShipLevel02" Type="ShipLevel" IsSerializable="false">
    <Modifier TargetProperty="MaximumHealth" Operation="Percent" Value="0.24" Path="ClassShip/ClassSectionCore"/>
    <Modifier TargetProperty="MaximumShield" Operation="Percent" Value="0.24" Path="ClassShip/ClassSectionCore"/>
  </SimulationDescriptor>

  <SimulationDescriptor Name="ShipLevel03" Type="ShipLevel" IsSerializable="false">
