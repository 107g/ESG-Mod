<?xml version="1.0" encoding="utf-8" ?>
<Datatable xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xsi:noNamespaceSchemaLocation="../Schemas/Amplitude.Unity.Simulation.SimulationDescriptor.xsd">
  <!-- Sustainable Farms -->
  <SimulationDescriptor Name="StarSystemImprovementFood1" Type="StarSystemImprovement">
    <BinaryModifier TargetProperty="SystemGrowth"		Operation="Addition"	Left="10"    BinaryOperation="Multiplication"    Right="$(OwnedPlanets)"		    Path="./ClassColonizedStarSystem" SearchValueFromPath="true"/>
    <BinaryModifier TargetProperty="SystemGrowth"		Operation="Addition"	Left="10"    BinaryOperation="Multiplication"    Right="$(OwnedHotPlanets)"		Path="./ClassColonizedStarSystem" SearchValueFromPath="true"/>
    <BinaryModifier TargetProperty="SystemGrowth"		Operation="Addition"	Left="10"    BinaryOperation="Multiplication"    Right="$(OwnedColdPlanets)"     Path="./ClassColonizedStarSystem" SearchValueFromPath="true"/>
  </SimulationDescriptor>

  <!-- Drone Networks -->
  <SimulationDescriptor Name="StarSystemImprovementStartingFoodIndustry" Type="StarSystemImprovement">
    <Modifier TargetProperty="SystemProduction"    Operation="Addition" Value="15" Path="./ClassColonizedStarSystem"/>
    <Modifier TargetProperty="SystemGrowth"        Operation="Addition" Value="15" Path="./ClassColonizedStarSystem"/>
  </SimulationDescriptor>

  <!-- Vaulter -->
  <SimulationDescriptor Name="StarSystemImprovementUniqueStrategicVaulters" Type="StarSystemImprovement">
    <BinaryModifier TargetProperty="NetStrategic2" Operation="Addition" Left="$(SystemLevel)" BinaryOperation="Multiplication" Right="1" Path="./ClassColonizedStarSystem" />
    <BinaryModifier TargetProperty="NetStrategic1" Operation="Addition" Left="$(SystemLevel)" BinaryOperation="Multiplication" Right="1" Path="./ClassColonizedStarSystem" />
  </SimulationDescriptor>

  <!-- Vodyani -->
  <SimulationDescriptor Name="StarSystemImprovementDustToLifeforceEffect" Type="StarSystemImprovement">
    <BinaryModifier TargetProperty="SystemLifeforceFromMoneyConversion"     Operation="Addition" Left="0.5"  BinaryOperation="Multiplication" Right="$(SystemMoney)"  Path="ClassColonizedStarSystem" TooltipHidden="true"/>
    <BinaryModifier TargetProperty="SystemMoneyFromMoneyConversion"         Operation="Addition" Left="-0.5" BinaryOperation="Multiplication" Right="$(SystemMoney)"  Path="ClassColonizedStarSystem" TooltipHidden="true" />
  </SimulationDescriptor>

  <SimulationDescriptor Name="StarSystemImprovementScience2Templars" Type="StarSystemImprovement">
    <BinaryModifier TargetProperty="SystemResearch" Operation="Addition" Left="$(AnomalyCount)" BinaryOperation="Multiplication" Right="$(SystemResearchRelics)"  Path="./ClassColonizedStarSystem" SearchValueFromPath="true" TooltipOverride="%StarSystemImprovementScience2TemplarsTooltipEffect"/>
  </SimulationDescriptor>

  <SimulationDescriptor Name="PlanetImprovementTemple1Descriptor" Type="PlanetImprovement">

    <Property Name="TemplePlanetPopulation" BaseValue="0"/>
    <Property Name="ModifierA" BaseValue="1"/>
    <Property Name="ModifierC" BaseValue="1"/>
    <Property Name="TempleMalus" BaseValue="0.5"/>
    <Modifier TargetProperty="PlanetFood" Operation="Multiplication" Value="$(TempleMalus)"  Path="./ClassColonizedPlanet"  TooltipHidden="false"/>
    <Modifier TargetProperty="PlanetIndustry" Operation="Multiplication" Value="$(TempleMalus)"  Path="./ClassColonizedPlanet"  TooltipHidden="false"/>
    <Modifier TargetProperty="PlanetScience" Operation="Multiplication" Value="$(TempleMalus)"  Path="./ClassColonizedPlanet"  TooltipHidden="false"/>
    <Modifier TargetProperty="PlanetDust" Operation="Multiplication" Value="$(TempleMalus)"  Path="./ClassColonizedPlanet"  TooltipHidden="false"/>
    <Modifier TargetProperty="NumberOfTemples" Operation="Addition" Value="1"  Path="../ClassColonizedStarSystem"  TooltipHidden="false"/>

    <Modifier TargetProperty="TemplePopulationCount"  Operation="Addition"    Value="$(Population)" Path="./ClassColonizedPlanet" TooltipHidden="false"  SearchValueFromPath="true"/>

    <Modifier TargetProperty="TemplePlanetPopulation"  Operation="Force"     Value="$(Population)" Path="./ClassColonizedPlanet" TooltipHidden="false"  SearchValueFromPath="true"/>


    <Modifier TargetProperty="EcologistVoicesModifier" Operation="Force" Value="1"  Path="../ClassColonizedStarSystem"  TooltipHidden="false"/>
    <Modifier TargetProperty="PlanetRawPrestige" Operation="Addition" Value="10"  Path="./ClassColonizedPlanet"  TooltipHidden="false"/>

    <Modifier TargetProperty="RawMaximumPopulation"         Operation="Addition" Value="1" Path="./ClassColonizedPlanet"/>
    <Modifier TargetProperty="CanConvertSystem" Value="1"  Operation="Addition" Path="../ClassEmpire" TooltipHidden="true"/>
    <Modifier TargetProperty="HasTemple" Operation="Addition" Value="1" Path="./ClassColonizedPlanet" TooltipHidden="true"/>

  </SimulationDescriptor>

  <SimulationDescriptor Name="EmpireImprovementTemplarsFinalQuest1" Type="EmpireImprovement">
    <Modifier TargetProperty="TempleMalus" Operation="Force" Value="1" Path="ClassEmpire/ClassColonizedStarSystem/ClassColonizedPlanet/ClassImprovement" TooltipOverride="%EmpireImprovementTemplarsFinalQuest1TooltipEffect"/>
  </SimulationDescriptor>

  <SimulationDescriptor Name="StarSystemImprovementDefense3Templars" Type="StarSystemImprovement">
    <Modifier TargetProperty="GroundBattleRoundImprovementDestructionProbability"   Operation="Addition"    Value="-0.2"    Path="./ColonizedStarSystemStateColony,ClassColonizedStarSystem"/>
    <Modifier TargetProperty="GroundBattleRoundPopulationDestructionProbability"    Operation="Addition"    Value="-0.2"    Path="./ColonizedStarSystemStateColony,ClassColonizedStarSystem"/>
    <Modifier TargetProperty="MaximumSystemManpower"                                Operation="Addition"    Value="300"     Path="./ColonizedStarSystemStateColony,ClassColonizedStarSystem"/>
    <Modifier TargetProperty="GroundBattleDefenderManpowerLimit"                    Operation="Addition"    Value="150"     Path="./ClassColonizedStarSystem"/>
    <BinaryModifier TargetProperty="GroundBattleDefenderTroopsMaxHealthMultiplier" Operation="Percent" Left="0.05" BinaryOperation="Multiplication" Right="$(NumberOfTemples)" Path="./ClassColonizedStarSystem" SearchValueFromPath="true" TooltipOverride="%StarSystemImprovementDefense3TemplarsEffectOverride"/>
  </SimulationDescriptor>

  <!-- Nakalim Quest Rewards -->
  <SimulationDescriptor Name="StarSystemImprovementQuestTemplars01" Type="StarSystemImprovement">
    <BinaryModifier TargetProperty="PlanetsWithoutTemples" Operation="Force" Left="$(OwnedPlanets)" BinaryOperation="Subtraction" Right="$(NumberOfTemples)" Path="./ClassColonizedStarSystem" SearchValueFromPath="true" TooltipHidden="true"/>
    <BinaryModifier TargetProperty="SystemEmpirePoint" Operation="Addition" Left="25" BinaryOperation="Multiplication" Right="$(PlanetsWithoutTemples)" Path="./ClassColonizedStarSystem" TooltipOverride="%StarSystemImprovementQuestTemplars01Effect" SearchValueFromPath="true"/>
  </SimulationDescriptor>
  <SimulationDescriptor Name="StarSystemImprovementQuestTemplars02" Type="StarSystemImprovement">
    <BinaryModifier TargetProperty="Happiness" Operation="Addition" Left="10" BinaryOperation="Multiplication" Right="$(NumberOfTemples)" Path="./ClassColonizedStarSystem" TooltipOverride="%StarSystemImprovementQuestTemplars02Effect" SearchValueFromPath="true"/>
  </SimulationDescriptor>
  <SimulationDescriptor Name="StarSystemImprovementQuestTemplars03" Type="StarSystemImprovement">
    <BinaryModifier TargetProperty="SystemProduction" Operation="Addition" Left="50" BinaryOperation="Multiplication" Right="$(NumberOfTemples)" Path="./ClassColonizedStarSystem" TooltipOverride="%StarSystemImprovementQuestTemplars03Effect" SearchValueFromPath="true"/>
  </SimulationDescriptor>
  <SimulationDescriptor Name="StarSystemImprovementQuestTemplars04" Type="StarSystemImprovement">
    <BinaryModifier TargetProperty="SystemMoney" Operation="Addition" Left="50" BinaryOperation="Multiplication" Right="$(NumberOfTemples)" Path="./ClassColonizedStarSystem" TooltipOverride="%StarSystemImprovementQuestTemplars04Effect" SearchValueFromPath="true"/>
  </SimulationDescriptor>

  <!-- Temple of Temporal Paradox -->
  <SimulationDescriptor Name="StarSystemImprovementUniqueTimeLords" Type="StarSystemImprovement">
    <Property Name="MaximumDustOverTimeStock" BaseValue="9999"/>
    <Property Name="MinimumDustOverTimeStock"/>
    <Property Name="DustOverTimeStock" />
    <Property Name="NetDustOverTime" BaseValue="7.5"/>
    <Property Name="DustOverTimeCount"/>
    <BinaryModifier TargetProperty="SystemMoney"              Operation="Addition" Left="15"   BinaryOperation="Addition"  Right="$(DustOverTimeStock)" Path="./ClassColonizedStarSystem" TooltipOverride="%StarSystemImprovementUniqueTimeLordsTooltipEffect" />
  </SimulationDescriptor>

  <!-- Galactic HQ -->
  <SimulationDescriptor Name="StarSystemImprovementHomeSystem" Type="StarSystemImprovement">
    <Modifier TargetProperty="SystemEmpirePoint"                     Operation="Addition" Value="5"          Path="./ClassColonizedStarSystem"/>
    <Modifier TargetProperty="SystemResearch"                        Operation="Addition" Value="10"         Path="./ClassColonizedStarSystem"/>
    <Modifier TargetProperty="SystemMoney"                           Operation="Addition" Value="40"         Path="./ClassColonizedStarSystem"/>
    <Modifier TargetProperty="UselessForTooltip"                     Operation="Addition" Value="1"          Path="../ClassEmpire,FactionTraitScaleSupremacy" TooltipOverride="%StarSystemImprovementHomeSystemOverride" TooltipHiddenIfPathInvalid="true"/>
  </SimulationDescriptor>

  <SimulationDescriptor Name="StarSystemImprovementHomeSystemTimeLords" Type="StarSystemImprovement">
    <Modifier TargetProperty="SystemEmpirePoint"                     Operation="Addition" Value="5"    Path="./ClassColonizedStarSystem"/>
    <Modifier TargetProperty="SystemResearch"                        Operation="Addition" Value="10"   Path="./ClassColonizedStarSystem"/>
    <Modifier TargetProperty="SystemMoney"                           Operation="Addition" Value="40"   Path="./ClassColonizedStarSystem"/>
    <Modifier TargetProperty="UselessForTooltip"                     Operation="Addition" Value="1"    Path="../ClassEmpire,FactionTraitScaleSupremacy" TooltipOverride="%StarSystemImprovementHomeSystemOverride" TooltipHiddenIfPathInvalid="true"/>
  </SimulationDescriptor>

  <SimulationDescriptor Name="StarSystemImprovementHomeSystemUnfallen" Type="StarSystemImprovement">
    <Modifier TargetProperty="SystemEmpirePoint"                     Operation="Addition" Value="5"    Path="./ClassColonizedStarSystem"/>
    <Modifier TargetProperty="SystemResearch"                        Operation="Addition" Value="10"   Path="./ClassColonizedStarSystem"/>
    <Modifier TargetProperty="SystemMoney"                           Operation="Addition" Value="40"   Path="./ClassColonizedStarSystem"/>
    <Modifier TargetProperty="MaximumSystemManpower"                 Operation="Addition" Value="1000" Path="./ClassColonizedStarSystem"/>
    <Modifier TargetProperty="UselessForTooltip"                     Operation="Addition" Value="1"    Path="../ClassEmpire,FactionTraitScaleSupremacy" TooltipOverride="%StarSystemImprovementHomeSystemOverride" TooltipHiddenIfPathInvalid="true"/>
  </SimulationDescriptor>

  <!-- Cravers Industrialist Path Antenna Reward-->
  <SimulationDescriptor Name="StarSystemImprovementIndustryCravers" Type="StarSystemImprovement">
    <Modifier TargetProperty="VisionRange"           Operation="Addition"    Value="8"     Path="./ClassColonizedStarSystem"/>
    <Modifier TargetProperty="VisionRange"           Operation="Addition"    Value="2"     Path="../ClassEmpire/ClassGarrison"/>
    <Modifier TargetProperty="SystemProduction"      Operation="Addition"    Value="80"       Path="./ClassColonizedStarSystem"/>
  </SimulationDescriptor>

  <!-- Hive Hall -->
  <SimulationDescriptor Name="StarSystemImprovementQuestRuinsCravers" Type="StarSystemImprovement">
    <Modifier TargetProperty="Upkeep"           Operation="Multiplication"     Value="0"     Path="./ClassColonizedStarSystem/ClassHero"    Priority="1000" TooltipHidden="true"/>
    <Modifier TargetProperty="ExperienceMultiplier" Operation="Addition" Value="0.5" Path="./ClassColonizedStarSystem/ClassHero" TooltipOverride="%StarSystemImprovementQuestRuinsCraversEffectOverride"/>
  </SimulationDescriptor>

  <!-- Synchronous Hive-->
  <SimulationDescriptor Name="StarSystemImprovementHeroCravers" Type="StarSystemImprovement">
    <Modifier TargetProperty="Happiness"            Operation="Addition"        Value="10"      Path="../ClassEmpire/ClassColonizedStarSystem" TooltipHidden="true"/>
    <Modifier TargetProperty="SystemEmpirePoint"           Operation="Addition"     Value="10"     Path="../ClassEmpire/ClassColonizedStarSystem" TooltipHidden="true"/>
  </SimulationDescriptor>

  <!-- ################################################################################ -->
  <!-- #################################  CURIOSITY   ################################# -->
  <!-- ################################################################################ -->

  <!-- THE VAULT OF GOVERNANCE -->
  <SimulationDescriptor Name="StarSystemImprovementUniqueCuriosity2" Type="StarSystemImprovement">
    <Modifier TargetProperty="ExperienceMultiplier" Operation="Addition" Value="1" Path="./ClassColonizedStarSystem/ClassHero" TooltipOverride="%StarSystemImprovementUniqueCuriosity2EffectOverride"/>
  </SimulationDescriptor>

  <!-- THE ANALYTICAL ENGINE -->
  <SimulationDescriptor Name="StarSystemImprovementUniqueCuriosity1" Type="StarSystemImprovement">
    <!--Feedback is done by GuiElement EffectOverride-->
    <BinaryModifier TargetProperty="SystemMoney" Operation="Addition" Left="3" BinaryOperation="Multiplication" Right="$(CuriositiesDiscovered)" Path="./ClassColonizedStarSystem" SearchValueFromPath="true" />
  </SimulationDescriptor>

  <!-- THE REJUVENATION MAZE -->
  <SimulationDescriptor Name="StarSystemImprovementUniqueCuriosity3" Type="StarSystemImprovement">
    <!--Feedback is done by GuiElement EffectOverride-->
    <Modifier TargetProperty="HealthRegenerationRatio" Operation="Addition" Value="0.5" Path="./ClassColonizedStarSystem/ClassGarrison/ClassShip" TooltipHidden="true"/>
    <Modifier TargetProperty="DockedFleetsHealthRegenerationRatio" Operation="Addition" Value="0.5" Path="./ClassColonizedStarSystem" TooltipHidden="true"/>
  </SimulationDescriptor>

  <!-- LUNAR SURVEILLANCE STATION -->
  <SimulationDescriptor Name="StarSystemImprovementCuriosity5" Type="StarSystemImprovement">
    <BinaryModifier TargetProperty="SystemResearch"	  Operation="Addition"     Left="100"     BinaryOperation="Multiplication" Right="$(OwnedMoons)"		    Path="./ClassColonizedStarSystem" SearchValueFromPath="true" />
  </SimulationDescriptor>

  <!--United Empire-->
  <SimulationDescriptor Name="StarSystemImprovementQuestUE05" Type="StarSystemImprovement">
    <Modifier TargetProperty="PlanetRawScience"    Operation="Addition" Value="1" Path="./ClassColonizedStarSystem/ClassColonizedPlanet" SearchValueFromPath="true"/>
    <BinaryModifier TargetProperty="PlanetRawScience"        Operation="Addition" Left="5" BinaryOperation="Multiplication" Right="$(PlanetHasAnomaly)" Path="./ClassColonizedStarSystem/ClassColonizedPlanet" SearchValueFromPath="true" />
  </SimulationDescriptor>

  <SimulationDescriptor Name="StarSystemImprovementQuestUnitedEmpire11" Type="StarSystemImprovement">
    <BinaryModifier TargetProperty="SystemProduction"     Operation="Addition"      Left="150"      BinaryOperation="Multiplication" Right="$(SystemLevel)"  Path="./ClassColonizedStarSystem" SearchValueFromPath="true"/>
    <BinaryModifier TargetProperty="SystemEmpirePoint"    Operation="Addition"      Left="100"       BinaryOperation="Multiplication" Right="$(SystemLevel)"  Path="./ClassColonizedStarSystem" SearchValueFromPath="true"/>
    <BinaryModifier TargetProperty="SystemProduction"	    Operation="Percent"       Left="0.02"     BinaryOperation="Multiplication" Right="$(EmpirePopulationTypeCount)"		    Path="./ClassColonizedStarSystem" SearchValueFromPath="true"/>
  </SimulationDescriptor>

  <SimulationDescriptor Name="StarSystemImprovementQuestUnitedEmpire12" Type="StarSystemImprovement">
    <BinaryModifier TargetProperty="Happiness"	  Operation="Addition"     Left="3"     BinaryOperation="Multiplication" Right="$(NumberOfScienceImprovementsBuilt)"		    Path="./ClassColonizedStarSystem" SearchValueFromPath="true"/>
    <Modifier TargetProperty="PlanetRawScience"    Operation="Addition" Value="3" Path="./ClassColonizedStarSystem/ClassColonizedPlanet" SearchValueFromPath="true"/>
    <Modifier TargetProperty="OverPopulationPenaltiesReduction"      Value="-0.30"   Operation="Addition"  Path="./ClassColonizedStarSystem" SearchValueFromPath="true"/>
  </SimulationDescriptor>

  <SimulationDescriptor Name="StarSystemImprovementUniqueTerrans" Type="StarSystemImprovement">
    <!-- Old loc key used for reference (in effect override): %StarSystemImprovementUniqueTerransTooltipEffect -->
    <BinaryModifier TargetProperty="SystemProduction"              Operation="Addition"  Left="0.30" BinaryOperation="Multiplication" Right="$(SystemEmpirePoint)" Path="./ClassColonizedStarSystem" SearchValueFromPath="true" />
    <BinaryModifier TargetProperty="SystemMoney"                   Operation="Addition"  Left="0.30" BinaryOperation="Multiplication" Right="$(SystemEmpirePoint)" Path="./ClassColonizedStarSystem" SearchValueFromPath="true" />
  </SimulationDescriptor>

  <!--Unfallen-->

  <SimulationDescriptor Name="StarSystemImprovementUniqueUnfallen" Type="StarSystemImprovement">
    <BinaryModifier TargetProperty="SystemEmpirePoint"              Operation="Addition"  Left="50" BinaryOperation="Multiplication" Right="$(PeaceCount)"      Path="./ClassColonizedStarSystem" SearchValueFromPath="true"/>
    <BinaryModifier TargetProperty="SystemEmpirePoint"              Operation="Addition"  Left="150" BinaryOperation="Multiplication" Right="$(AllianceCount)"   Path="./ClassColonizedStarSystem" SearchValueFromPath="true"/>
  </SimulationDescriptor>

  <SimulationDescriptor Name="StarSystemImprovementQuestUnfallen04" Type="StarSystemImprovement">
    <BinaryModifier TargetProperty="SystemResearch"	  Operation="Addition"     Left="30"     BinaryOperation="Multiplication" Right="$(PopulationType)"		    Path="./ClassColonizedStarSystem" SearchValueFromPath="true"  TooltipOverride="%StarSystemImprovementQuestUnfallen04TooltipsEffect"/>
  </SimulationDescriptor>

  <SimulationDescriptor Name="StarSystemImprovementQuestUnfallen05" Type="StarSystemImprovement">
    <BinaryModifier TargetProperty="Happiness"	  Operation="Addition"     Left="7"     BinaryOperation="Multiplication" Right="$(PopulationType)"		    Path="./ClassColonizedStarSystem" SearchValueFromPath="true" TooltipOverride="%StarSystemImprovementQuestUnfallen05TooltipsEffect"/>
  </SimulationDescriptor>

  <!-- Sophons -->

  <SimulationDescriptor Name="StarSystemImprovementPropagandaSophons" Type="StarSystemImprovement">
    <Modifier TargetProperty="Happiness"           Operation="Addition"     Value="5"     Path="./ClassColonizedStarSystem"/>
    <Modifier TargetProperty="SystemEmpirePoint" Operation="Addition" Value="20" Path="./ClassColonizedStarSystem"/>
  </SimulationDescriptor>

  <SimulationDescriptor Name="StarSystemImprovementDefenseSophons" Type="StarSystemImprovement">
    <Modifier TargetProperty="MaximumSystemManpower"                Operation="Addition"    Value="250"     Path="./ColonizedStarSystemStateColony,ClassColonizedStarSystem"/>
    <Modifier TargetProperty="GroundBattleDefenderManpowerLimit"    Operation="Addition"    Value="150"     Path="./ClassColonizedStarSystem"/>
    <Modifier TargetProperty="GroundBattleBombardmentAttackerDamages"           Operation="Addition"    Value="750"     Path="./ColonizedStarSystemStateColony,ClassColonizedStarSystem"/>
  </SimulationDescriptor>

  <!-- Vaulters -->
  <SimulationDescriptor Name="StarSystemImprovementUniqueVaulters" Type="StarSystemImprovement">
    <BinaryModifier TargetProperty="Happiness"		Operation="Addition"		Left="5"   BinaryOperation="Multiplication" Right="$(OwnedAnomalies)"		    Path="./ClassColonizedStarSystem" SearchValueFromPath="true"/>
    <BinaryModifier TargetProperty="SystemResearch"		Operation="Addition"		Left="30"   BinaryOperation="Multiplication" Right="$(OwnedAnomalies)"		    Path="./ClassColonizedStarSystem" SearchValueFromPath="true"/>
    <BinaryModifier TargetProperty="PlanetRawScience"        Operation="Addition" Left="2" BinaryOperation="Multiplication" Right="$(PlanetHasAnomaly)" Path="./ClassColonizedStarSystem/ClassColonizedPlanet" SearchValueFromPath="true" />
  </SimulationDescriptor>
</Datatable>