<?xml version="1.0" encoding="utf-8" ?>
<Datatable xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xsi:noNamespaceSchemaLocation="../Schemas/Amplitude.Unity.Simulation.SimulationDescriptor.xsd">
	<!-- Black Hole -->
	<SimulationDescriptor Name="SpecialNodeEffectBlackHole" Type="SpecialNodeEffect" IsSerializable="false">
		<BinaryModifier TargetProperty="SystemResearch" Operation="Addition" Left="50" BinaryOperation="Multiplication" Right="$(SpecialNodeFIDSI)" TooltipHidden="true"/>

		<!-- UC Beacon -->
		<BinaryModifier TargetProperty="SystemResearch" Operation="Addition" Left="50" BinaryOperation="Multiplication" Right="$(SpecialNodeFIDSI)" Path="../ClassHackingBeacon/../ClassEmpire/ClassColonizedStarSystem,ColonizedStarSystemStateColony" TooltipHiddenIfPathInvalid="true" SearchValueFromPath="true"/>
		<Modifier TargetProperty="GlobalSpeed" Operation="Percent" Value="0.2" Path="../ClassHackingBeacon/../ClassEmpire//ClassShip" TooltipHidden="true"/>

		<!-- Orbit Effect -->
		<Modifier TargetProperty="UselessForTooltip" Operation="Addition" Value="1" TooltipOverride="%SpecialNodeEffectBlackHoleOrbitalEffect"/>
	</SimulationDescriptor>

	<!-- Asteroid Field -->
	<SimulationDescriptor Name="SpecialNodeEffectAsteroidField" Type="SpecialNodeEffect" IsSerializable="false">
    <BinaryModifier TargetProperty="SystemProduction" Operation="Addition" Left="50" BinaryOperation="Multiplication" Right="$(SpecialNodeFIDSI)" TooltipHidden="true"/>

		<!-- UC Beacon -->
    <BinaryModifier TargetProperty="SystemProduction" Operation="Addition" Left="50" BinaryOperation="Multiplication" Right="$(SpecialNodeFIDSI)" Path="../ClassHackingBeacon/../ClassEmpire/ClassColonizedStarSystem,ColonizedStarSystemStateColony" TooltipHiddenIfPathInvalid="true" SearchValueFromPath="true"/>
		<Modifier TargetProperty="RetrofitCost" Operation="Percent" Value="-0.2" Path="../ClassHackingBeacon/../ClassEmpire" TooltipHidden="true"/>

		<!-- Orbit Effect -->
		<Modifier TargetProperty="UselessForTooltip" Operation="Addition" Value="1" TooltipOverride="%SpecialNodeEffectAsteroidFieldOrbitalEffect"/>
	</SimulationDescriptor>

	<!-- Collapsing Star -->
	<SimulationDescriptor Name="SpecialNodeEffectCollapsingStar" Type="SpecialNodeEffect" IsSerializable="false">
    <BinaryModifier TargetProperty="SystemEmpirePoint" Operation="Addition" Left="50" BinaryOperation="Multiplication" Right="$(SpecialNodeFIDSI)" TooltipHidden="true"/>

		<!-- UC Beacon -->
    <BinaryModifier TargetProperty="SystemEmpirePoint" Operation="Addition" Left="50" BinaryOperation="Multiplication" Right="$(SpecialNodeFIDSI)" Path="../ClassHackingBeacon/../ClassEmpire/ClassColonizedStarSystem,ColonizedStarSystemStateColony" TooltipHiddenIfPathInvalid="true" SearchValueFromPath="true"/>
		<Modifier TargetProperty="ExperiencePerTurn" Operation="Addition" Value="1" Path="../ClassHackingBeacon/../ClassEmpire//ClassShip,!ShipRoleHero" TooltipHidden="true"/>

		<!-- Orbit Effect -->
		<Modifier TargetProperty="UselessForTooltip" Operation="Addition" Value="1" TooltipOverride="%SpecialNodeEffectCollapsingStarOrbitalEffect"/>
	</SimulationDescriptor>

	<!-- Solar Nebula -->
	<SimulationDescriptor Name="SpecialNodeEffectSolarNebula" Type="SpecialNodeEffect" IsSerializable="false">
    <BinaryModifier TargetProperty="SystemMoney" Operation="Addition" Left="50" BinaryOperation="Multiplication" Right="$(SpecialNodeFIDSI)" TooltipHidden="true"/>

		<!-- UC Beacon -->
    <BinaryModifier TargetProperty="SystemMoney" Operation="Addition" Left="50" BinaryOperation="Multiplication" Right="$(SpecialNodeFIDSI)" Path="../ClassHackingBeacon/../ClassEmpire/ClassColonizedStarSystem,ColonizedStarSystemStateColony" TooltipHiddenIfPathInvalid="true" SearchValueFromPath="true"/>
		<Modifier TargetProperty="GarrisonMoneyUpkeep" Operation="Percent" Value="-0.5" Path="../ClassHackingBeacon/../ClassEmpire//ClassShip,!ShipRoleHero" TooltipHidden="true"/>

		<!-- Orbit Effect -->
		<Modifier TargetProperty="UselessForTooltip" Operation="Addition" Value="1" TooltipOverride="%SpecialNodeEffectSolarNebulaOrbitalEffect"/>
	</SimulationDescriptor>

	<!-- Neutron Star -->
	<SimulationDescriptor Name="SpecialNodeEffectNeutronStar" Type="SpecialNodeEffect" IsSerializable="false">
		<BinaryModifier TargetProperty="SystemResearch"	Operation="Addition" Left="$(SpecialNodeFIDSI)" BinaryOperation="Multiplication" Right="$(SystemPopulation)" TooltipHidden="true"/>
		<BinaryModifier TargetProperty="SystemEmpirePoint"	Operation="Addition" Left="$(SpecialNodeFIDSI)" BinaryOperation="Multiplication" Right="$(SystemPopulation)" TooltipHidden="true"/>

		<!-- UC Beacon -->
		<BinaryModifier TargetProperty="SystemResearch"	Operation="Addition" Left="$(SpecialNodeFIDSI)" BinaryOperation="Multiplication" Right="$(SystemPopulation)" Path="../ClassHackingBeacon/../ClassEmpire/ClassColonizedStarSystem,ColonizedStarSystemStateColony" TooltipHiddenIfPathInvalid="true" SearchValueFromPath="true"/>
		<BinaryModifier TargetProperty="SystemEmpirePoint"	Operation="Addition" Left="$(SpecialNodeFIDSI)" BinaryOperation="Multiplication" Right="$(SystemPopulation)" Path="../ClassHackingBeacon/../ClassEmpire/ClassColonizedStarSystem,ColonizedStarSystemStateColony" TooltipHiddenIfPathInvalid="true" SearchValueFromPath="true"/>
		<Modifier TargetProperty="VisionRange" Operation="Percent" Value="0.5" Path="../ClassHackingBeacon/../ClassEmpire//ClassShip" TooltipHidden="true"/>
	
		<Modifier TargetProperty="UselessForTooltip" Operation="Addition" Value="1" TooltipOverride="%SpecialNodeEffectNeutronStarOrbitalEffect"/>
	</SimulationDescriptor>

	<!-- Nebula Clouds -->
	<SimulationDescriptor Name="SpecialNodeEffectSpaceClouds" Type="SpecialNodeEffect" IsSerializable="false">
    <BinaryModifier TargetProperty="SystemMoney" Operation="Addition" Left="10" BinaryOperation="Multiplication" Right="$(SpecialNodeFIDSI)" TooltipHidden="true"/>
    <BinaryModifier TargetProperty="SystemEmpirePoint" Operation="Addition" Left="10" BinaryOperation="Multiplication" Right="$(SpecialNodeFIDSI)" TooltipHidden="true"/>
    <BinaryModifier TargetProperty="SystemProduction" Operation="Addition" Left="10" BinaryOperation="Multiplication" Right="$(SpecialNodeFIDSI)" TooltipHidden="true"/>
    <BinaryModifier TargetProperty="SystemResearch" Operation="Addition" Left="10" BinaryOperation="Multiplication" Right="$(SpecialNodeFIDSI)" TooltipHidden="true"/>

		<!-- UC Beacon -->
    <BinaryModifier TargetProperty="SystemMoney" Operation="Addition" Left="10" BinaryOperation="Multiplication" Right="$(SpecialNodeFIDSI)" Path="../ClassHackingBeacon/../ClassEmpire/ClassColonizedStarSystem,ColonizedStarSystemStateColony" TooltipHiddenIfPathInvalid="true" SearchValueFromPath="true"/>
    <BinaryModifier TargetProperty="SystemEmpirePoint" Operation="Addition" Left="10" BinaryOperation="Multiplication" Right="$(SpecialNodeFIDSI)" Path="../ClassHackingBeacon/../ClassEmpire/ClassColonizedStarSystem,ColonizedStarSystemStateColony" TooltipHiddenIfPathInvalid="true" SearchValueFromPath="true"/>
    <BinaryModifier TargetProperty="SystemProduction" Operation="Addition" Left="10" BinaryOperation="Multiplication" Right="$(SpecialNodeFIDSI)" Path="../ClassHackingBeacon/../ClassEmpire/ClassColonizedStarSystem,ColonizedStarSystemStateColony" TooltipHiddenIfPathInvalid="true" SearchValueFromPath="true"/>
    <BinaryModifier TargetProperty="SystemResearch" Operation="Addition" Left="10" BinaryOperation="Multiplication" Right="$(SpecialNodeFIDSI)" Path="../ClassHackingBeacon/../ClassEmpire/ClassColonizedStarSystem,ColonizedStarSystemStateColony" TooltipHiddenIfPathInvalid="true" SearchValueFromPath="true"/>
		<Modifier TargetProperty="Evasion" Operation="Percent" Value="0.1" Path="../ClassHackingBeacon/../ClassEmpire//ClassShip" TooltipHidden="true"/>

		<!-- Orbit Effect -->
		<Modifier TargetProperty="UselessForTooltip" Operation="Addition" Value="1" TooltipOverride="%SpecialNodeEffectSpaceCloudsOrbitalEffect"/>
	</SimulationDescriptor>

	<!-- Rejuvenation Field -->
	<SimulationDescriptor Name="SpecialNodeEffectVaulters" Type="SpecialNodeEffect" IsSerializable="false">
		<Modifier TargetProperty="NetStrategic2" Operation="Addition" Value="1" Path="../ClassEmpire" TooltipHidden="true"/>
		<Modifier TargetProperty="NetStrategic1" Operation="Addition" Value="1" Path="../ClassEmpire" TooltipHidden="true"/>
    <BinaryModifier TargetProperty="SystemMoney" Operation="Addition" Left="25" BinaryOperation="Multiplication" Right="$(SpecialNodeFIDSI)" TooltipHidden="true"/>

		<!-- UC Beacon -->
    <BinaryModifier TargetProperty="SystemMoney" Operation="Addition" Left="25" BinaryOperation="Multiplication" Right="$(SpecialNodeFIDSI)" Path="../ClassHackingBeacon/../ClassEmpire/ClassColonizedStarSystem,ColonizedStarSystemStateColony" TooltipHiddenIfPathInvalid="true" SearchValueFromPath="true"/>
		<Modifier TargetProperty="NetStrategic1" Operation="Addition" Value="1" Path="../ClassHackingBeacon/../ClassEmpire" TooltipHiddenIfPathInvalid="true"/>
		<Modifier TargetProperty="NetStrategic2" Operation="Addition" Value="1" Path="../ClassHackingBeacon/../ClassEmpire" TooltipHiddenIfPathInvalid="true"/>
		<Modifier TargetProperty="HealthRegenerationRatio" Operation="Percent" Value="0.05" Path="../ClassHackingBeacon/../ClassEmpire//ClassShip" TooltipHidden="true"/>

		<!-- Orbit Effect -->
		<Modifier TargetProperty="UselessForTooltip" Operation="Addition" Value="1" TooltipOverride="%SpecialNodeEffectRejuvenationFieldOrbitalEffect"/>
	</SimulationDescriptor>
</Datatable>