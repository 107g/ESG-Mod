<?xml version="1.0" encoding="utf-8" ?>
<Datatable xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xsi:noNamespaceSchemaLocation="../Schemas/Amplitude.Unity.Simulation.SimulationDescriptor.xsd">
  <!-- Dust -->
  <SimulationDescriptor Name="PlanetImprovementDust1" Type="PlanetImprovement">
    <Modifier TargetProperty="PlanetRawDust"       Operation="Addition" Value="1"         Path="./ClassColonizedPlanet"/>
    <Modifier TargetProperty="PlanetRawDust"       Operation="Addition" Value="1"         Path="./ClassColonizedPlanet,PlanetGameplayTypeTemperate"/>
  </SimulationDescriptor>

  <SimulationDescriptor Name="PlanetImprovementDust2" Type="PlanetImprovement">
    <Modifier TargetProperty="PlanetRawDust"       Operation="Addition" Value="2"         Path="./ClassColonizedPlanet"/>
    <Modifier TargetProperty="PlanetRawDust"       Operation="Addition" Value="2"         Path="./ClassColonizedPlanet,PlanetGameplayTypeTemperate"/>
  </SimulationDescriptor>

  <SimulationDescriptor Name="PlanetImprovementDust3" Type="PlanetImprovement">
    <Modifier TargetProperty="PlanetRawDust"       Operation="Addition" Value="3"         Path="./ClassColonizedPlanet"/>
    <Modifier TargetProperty="PlanetRawDust"       Operation="Addition" Value="3"         Path="./ClassColonizedPlanet,PlanetGameplayTypeTemperate"/>
  </SimulationDescriptor>
  
  <!-- Temple -->
  <SimulationDescriptor Name="PlanetImprovementTemple1Descriptor" Type="PlanetImprovement">

    <Property Name="TemplePlanetPopulation" BaseValue="0"/>
    <Property Name="ModifierA" BaseValue="1"/>
    <Property Name="ModifierC" BaseValue="1"/>
    <Property Name="TempleMalus" BaseValue="0.5"/>
    <Modifier TargetProperty="PlanetFood" Operation="Multiplication" Value="$(TempleMalus)" Path="./ClassColonizedPlanet" TooltipHidden="false"/>
    <Modifier TargetProperty="PlanetIndustry" Operation="Multiplication" Value="$(TempleMalus)" Path="./ClassColonizedPlanet" TooltipHidden="false"/>
    <Modifier TargetProperty="PlanetScience" Operation="Multiplication" Value="$(TempleMalus)" Path="./ClassColonizedPlanet" TooltipHidden="false"/>
    <Modifier TargetProperty="PlanetDust" Operation="Multiplication" Value="$(TempleMalus)" Path="./ClassColonizedPlanet" TooltipHidden="false"/>
    <Modifier TargetProperty="NumberOfTemples" Operation="Addition" Value="1" Path="../ClassColonizedStarSystem" TooltipHidden="false"/>

    <Modifier TargetProperty="TemplePopulationCount" Operation="Addition" Value="$(Population)" Path="./ClassColonizedPlanet" TooltipHidden="false" SearchValueFromPath="true"/>

    <Modifier TargetProperty="TemplePlanetPopulation" Operation="Force" Value="$(Population)" Path="./ClassColonizedPlanet" TooltipHidden="false" SearchValueFromPath="true"/>


    <Modifier TargetProperty="EcologistVoicesModifier" Operation="Force" Value="1" Path="../ClassColonizedStarSystem" TooltipHidden="false"/>
    <Modifier TargetProperty="PlanetRawPrestige" Operation="Addition" Value="10" Path="./ClassColonizedPlanet" TooltipOverride="%PlanetImprovementTemple1TooltipOverride"/>
    <Modifier TargetProperty="PlanetRawPrestige" Operation="Addition" Value="5" Path="./ClassColonizedPlanet,PlanetGameplayTypeCold" TooltipHidden="false"/>

    <Modifier TargetProperty="RawMaximumPopulation" Operation="Addition" Value="1" Path="./ClassColonizedPlanet"/>
    <Modifier TargetProperty="CanConvertSystem" Value="1" Operation="Addition" Path="../ClassEmpire" TooltipHidden="true"/>
    <Modifier TargetProperty="HasTemple" Operation="Addition" Value="1" Path="./ClassColonizedPlanet" TooltipHidden="true"/>
  </SimulationDescriptor>
</Datatable>