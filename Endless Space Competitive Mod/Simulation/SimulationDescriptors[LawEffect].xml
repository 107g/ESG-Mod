<?xml version="1.0" encoding="utf-8" ?>
<Datatable xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xsi:noNamespaceSchemaLocation="../Schemas/Amplitude.Unity.Simulation.SimulationDescriptor.xsd">

    <!-- ################################################################ -->
    <!-- #################### P01: INDUSTRIALIST ######################## -->
    <!-- ################################################################ -->

    <!-- Super Law -->
    <SimulationDescriptor Name="LawEffectP01L00Dictatorship" Type="LawEffect">
        <Modifier       TargetProperty="RatioOfProductionSpentGainedAsMoney" Operation="Addition" Value="0.25" Path="../ClassEmpire" TooltipHidden="true" />
        <Modifier       TargetProperty="BonusPopulationIndustry"             Operation="Addition" Value="2"    Path="../ClassEmpire/ClassColonizedStarSystem/ClassColonizedPlanet/ClassPopulation" />
    </SimulationDescriptor>
    
    <!-- ################################################################ -->
    <!-- ####################   P03: PACIFIST    ######################## -->
    <!-- ################################################################ -->
    
    <!-- Super Law -->
    <SimulationDescriptor Name="LawEffectP03L00Dictatorship" Type="LawEffect">
        <Modifier       TargetProperty="BonusPopulationDust"      Operation="Addition"            Value="2"       Path="../ClassEmpire/ClassColonizedStarSystem/ClassColonizedPlanet/ClassPopulation" />
        <Modifier       TargetProperty="BuildingBuyoutReduction"  Operation="Addition"            Value="0.1"     Path="../ClassEmpire/ClassColonizedStarSystem"/>
    </SimulationDescriptor>

    <!-- ################################################################ -->
    <!-- ####################   P05: RELIGIOUS   ######################## -->
    <!-- ################################################################ -->

    <!-- Super Law -->
    <SimulationDescriptor Name="LawEffectP05L00Dictatorship" Type="LawEffect">
        <Modifier TargetProperty="IgnoresColdWarRules"  Operation="Addition"         Value="1" Path="../ClassEmpire" TooltipHidden="true"/>
        <Modifier TargetProperty="PlanetRawPrestige"    Operation="Addition"         Value="2"     Path="../ClassEmpire/ClassColonizedStarSystem/ClassPlanet"/>
        <Modifier TargetProperty="ExperiencePerTurn"    Operation="Percent"          Value="0.15"  Path="ClassEmpire//ClassHero"/>
    </SimulationDescriptor>
    
    <!-- ################################################################ -->
    <!-- ####################   P06: MILITARIST   ####################### -->
    <!-- ################################################################ -->
    
    <!-- Super Law -->
    <SimulationDescriptor Name="LawEffectP06L00Republic" Type="LawEffect">
        <Modifier TargetProperty="FreeWarDeclaration"          Operation="Force"        Value="0"     Path="../ClassEmpire" TooltipHidden="true"/>
        <Modifier TargetProperty="FreeWarDeclaration"          Operation="Force"        Value="0"     Path="../ClassEmpire/ClassDiplomacy/ClassDiplomaticEmpire" Priority="1" TooltipHidden="true"/>
        <!-- Contact AI if you change the following modifier -->
        <Modifier TargetProperty="HappinessPerWar"          Operation="Addition"     Value="20"  Path="../ClassEmpire/ClassColonizedStarSystem"/>
        <Modifier TargetProperty="HappinessPerMinorWar"     Operation="Addition"     Value="10"  Path="../ClassEmpire/ClassColonizedStarSystem"/>
    </SimulationDescriptor>

    <SimulationDescriptor Name="LawEffectP06L00Dictatorship" Type="LawEffect">
        <Modifier TargetProperty="FreeWarDeclaration"          Operation="Force"        Value="0"     Path="../ClassEmpire" TooltipHidden="true"/>
        <Modifier TargetProperty="FreeWarDeclaration"          Operation="Force"        Value="0"     Path="../ClassEmpire/ClassDiplomacy/ClassDiplomaticEmpire" Priority="1" TooltipHidden="true"/>
        <!-- Contact AI if you change the following modifier -->
        <Modifier TargetProperty="HappinessPerWar"          Operation="Addition"     Value="20"  Path="../ClassEmpire/ClassColonizedStarSystem"/>
        <Modifier TargetProperty="HappinessPerMinorWar"     Operation="Addition"     Value="10"  Path="../ClassEmpire/ClassColonizedStarSystem"/>
        <Modifier TargetProperty="NetSystemManpower"     Operation="Percent"      Value="0.25" Path="../ClassEmpire/ClassColonizedStarSystem"/>
        <BinaryModifier TargetProperty="NetSystemManpower" 	   Operation="Addition" Left="2" BinaryOperation="Multiplication" Right="$(Population)" Path="../ClassEmpire/ClassColonizedStarSystem" />
    </SimulationDescriptor>





</Datatable>