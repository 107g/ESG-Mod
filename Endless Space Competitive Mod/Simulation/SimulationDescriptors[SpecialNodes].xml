<?xml version="1.0" encoding="utf-8" ?>
<Datatable xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xsi:noNamespaceSchemaLocation="../Schemas/Amplitude.Unity.Simulation.SimulationDescriptor.xsd">
  <SimulationDescriptor Name="SpecialNodeEffectBlackHole" Type="SpecialNodeEffect" IsSerializable="false">
    <Modifier TargetProperty="SystemResearch" Operation="Addition" Value="50"/>
    <Modifier TargetProperty="SystemResearch" Operation="Addition" Value="50" Path="../ClassHackingBeacon/../ClassEmpire/ClassColonizedStarSystem,ColonizedStarSystemStateColony" TooltipHiddenIfPathInvalid="true"/>
  </SimulationDescriptor>

  <SimulationDescriptor Name="SpecialNodeEffectAsteroidField" Type="SpecialNodeEffect" IsSerializable="false">
    <Modifier TargetProperty="SystemProduction" Operation="Addition" Value="50"/>
    <Modifier TargetProperty="SystemProduction" Operation="Addition" Value="50" Path="../ClassHackingBeacon/../ClassEmpire/ClassColonizedStarSystem,ColonizedStarSystemStateColony" TooltipHiddenIfPathInvalid="true"/>
  </SimulationDescriptor>

  <SimulationDescriptor Name="SpecialNodeEffectCollapsingStar" Type="SpecialNodeEffect" IsSerializable="false">
    <Modifier TargetProperty="SystemEmpirePoint" Operation="Addition" Value="50"/>
    <Modifier TargetProperty="SystemEmpirePoint" Operation="Addition" Value="50" Path="../ClassHackingBeacon/../ClassEmpire/ClassColonizedStarSystem,ColonizedStarSystemStateColony" TooltipHiddenIfPathInvalid="true"/>
  </SimulationDescriptor>

  <SimulationDescriptor Name="SpecialNodeEffectSolarNebula" Type="SpecialNodeEffect" IsSerializable="false">
    <Modifier TargetProperty="SystemMoney" Operation="Addition" Value="50"/>
    <Modifier TargetProperty="SystemMoney" Operation="Addition" Value="50" Path="../ClassHackingBeacon/../ClassEmpire/ClassColonizedStarSystem,ColonizedStarSystemStateColony" TooltipHiddenIfPathInvalid="true"/>
  </SimulationDescriptor>

  <SimulationDescriptor Name="SpecialNodeEffectNeutronStar" Type="SpecialNodeEffect" IsSerializable="false">
    <BinaryModifier TargetProperty="SystemResearch"	Operation="Addition" Left="1" BinaryOperation="Multiplication" Right="$(SystemPopulation)"/>
    <BinaryModifier TargetProperty="SystemEmpirePoint"	Operation="Addition" Left="1" BinaryOperation="Multiplication" Right="$(SystemPopulation)"/>
    <BinaryModifier TargetProperty="SystemResearch"	Operation="Addition" Left="1" BinaryOperation="Multiplication" Right="$(SystemPopulation)" Path="../ClassHackingBeacon/../ClassEmpire/ClassColonizedStarSystem,ColonizedStarSystemStateColony" TooltipHiddenIfPathInvalid="true"/>
    <BinaryModifier TargetProperty="SystemEmpirePoint"	Operation="Addition" Left="1" BinaryOperation="Multiplication" Right="$(SystemPopulation)" Path="../ClassHackingBeacon/../ClassEmpire/ClassColonizedStarSystem,ColonizedStarSystemStateColony" TooltipHiddenIfPathInvalid="true"/>
  </SimulationDescriptor>

  <SimulationDescriptor Name="SpecialNodeEffectSpaceClouds" Type="SpecialNodeEffect" IsSerializable="false">
    <Modifier TargetProperty="SystemMoney" Operation="Addition" Value="10"/>
    <Modifier TargetProperty="SystemEmpirePoint" Operation="Addition" Value="10"/>
    <Modifier TargetProperty="SystemProduction" Operation="Addition" Value="10"/>
    <Modifier TargetProperty="SystemResearch" Operation="Addition" Value="10"/>
    <Modifier TargetProperty="SystemMoney" Operation="Addition" Value="10" Path="../ClassHackingBeacon/../ClassEmpire/ClassColonizedStarSystem,ColonizedStarSystemStateColony" TooltipHiddenIfPathInvalid="true"/>
    <Modifier TargetProperty="SystemEmpirePoint" Operation="Addition" Value="10" Path="../ClassHackingBeacon/../ClassEmpire/ClassColonizedStarSystem,ColonizedStarSystemStateColony" TooltipHiddenIfPathInvalid="true"/>
    <Modifier TargetProperty="SystemProduction" Operation="Addition" Value="10" Path="../ClassHackingBeacon/../ClassEmpire/ClassColonizedStarSystem,ColonizedStarSystemStateColony" TooltipHiddenIfPathInvalid="true"/>
    <Modifier TargetProperty="SystemResearch" Operation="Addition" Value="10" Path="../ClassHackingBeacon/../ClassEmpire/ClassColonizedStarSystem,ColonizedStarSystemStateColony" TooltipHiddenIfPathInvalid="true"/>
  </SimulationDescriptor>

  <SimulationDescriptor Name="SpecialNodeEffectVaulters" Type="SpecialNodeEffect" IsSerializable="false">
    <Modifier TargetProperty="NetStrategic2" Operation="Addition" Value="1" Path="../ClassEmpire" />
    <Modifier TargetProperty="NetStrategic1" Operation="Addition" Value="1" Path="../ClassEmpire" />
    <Modifier TargetProperty="SystemMoney" Operation="Addition" Value="25"/>
  </SimulationDescriptor>

  <!-- Orbiting -->
  <SimulationDescriptor Name="FleetOrbitingSpecialNodeBlackHole"      Type="FleetOrbitingSpecialNode"/>
  <SimulationDescriptor Name="FleetOrbitingSpecialNodeAsteroidField"  Type="FleetOrbitingSpecialNode"/>
  <SimulationDescriptor Name="FleetOrbitingSpecialNodeCollapsingStar" Type="FleetOrbitingSpecialNode"/>
  <SimulationDescriptor Name="FleetOrbitingSpecialNodeSolarNebula"    Type="FleetOrbitingSpecialNode"/>
  <SimulationDescriptor Name="FleetOrbitingSpecialNodeNeutronStar"    Type="FleetOrbitingSpecialNode"/>
  <SimulationDescriptor Name="FleetOrbitingSpecialNodeSpaceClouds"    Type="FleetOrbitingSpecialNode"/>
  <SimulationDescriptor Name="FleetOrbitingSpecialNodeVaulters"       Type="FleetOrbitingSpecialNode"/>

  <!-- Arena Effect -->
  <SimulationDescriptor Name="ArenaEffectSpecialNodeBlackHole"    Type="ArenaEffect">
    <Modifier TargetProperty="EncounterDamageProjectile"    Operation="Addition"  Value="-0.5"  Path="ClassGroup//ClassShip"/>
    <Modifier TargetProperty="ExperienceBonusPercent"       Operation="Addition"  Value="0.25"  Path="ClassGroup"/>
  </SimulationDescriptor>

  <SimulationDescriptor Name="ArenaEffectSpecialNodeAsteroidField" Type="ArenaEffect">
    <Modifier TargetProperty="Evasion"                     Operation="Percent"   Value="0.4"  Path="ClassGroup//ClassShip,ShipSizeSmall"/>
    <!--<Modifier TargetProperty="DamagePerPhase"                     Operation="Percent"   Value="0.1"  Path="ClassGroup//ClassShip,!ShipSizeSmall"/>-->
  </SimulationDescriptor>

  <SimulationDescriptor Name="ArenaEffectSpecialNodeSolarNebula"   Type="ArenaEffect">
    <Modifier TargetProperty="PlayerDustPerAliveCP"         Operation="Addition"  Value="50"    Path="ClassGroup"/>

  </SimulationDescriptor>

  <SimulationDescriptor Name="ArenaEffectSpecialNeutronStar"   Type="ArenaEffect">
    <Modifier TargetProperty="MaximumShield"		         		Operation="Force"		Value="0"	Priority="1" Path="ClassGroup//ClassShip"/>
    <Modifier TargetProperty="FlotillaMaximumShield"		    Operation="Force"		Value="0"	Priority="1" Path="ClassGroup//ClassShip"/>
  </SimulationDescriptor>

  <SimulationDescriptor Name="ArenaEffectSpecialNodeSpaceClouds"   Type="ArenaEffect">
    <Modifier TargetProperty="Evasion"		                  Operation="Percent"		Value="0.2"    Path="ClassGroup//ClassShip"/>
    <Modifier TargetProperty="Accuracy"                     Operation="Percent"   Value="-0.5"   Path="ClassGroup//ClassSalvo,LongRange"/>
    <Modifier TargetProperty="Accuracy"                     Operation="Percent"   Value="-0.25"  Path="ClassGroup//ClassSalvo,MediumRange"/>
  </SimulationDescriptor>

  <SimulationDescriptor Name="ArenaEffectSpecialNodeEffectCollapsingStar"   Type="ArenaEffect">
    <!--<Modifier TargetProperty="ShipAbsorptionLostEachPhase"  Operation="Addition"   Value="0.5"  Path="ClassGroup//ClassShip"/>-->
    <Modifier TargetProperty="ManpowerPercentKillPerPhase"  Operation="Addition"  Value="0.1"  Path="ClassGroup//ClassShip"/>
  </SimulationDescriptor>

  <SimulationDescriptor Name="ArenaEffectSpecialNodeVaulters" Type="ArenaEffect">
    <Modifier TargetProperty="RepairAfterPhase"             Operation="Addition" Value="0.2"        Path="ClassGroup//ClassShip"     Priority="1"/>
  </SimulationDescriptor>
</Datatable>